{
  "include": ["src"], // 컴파일 할 타입스크립트 파일의 범위, 위치를 알려주는 옵션
  
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // es6 수준의 호환 가능한 코드로 변환
    "target": "es2020",
    // 생성되는 JS파일이 어떤 모듈 시스템을 사용할지 설정
    "module": "esnext",
    // 컴파일이 완료된 JS파일들이 저장될 출력 디렉토리 지정 설정 
    "outDir": "./dist",
    // 엄격한 타입 검사 설정(false 시 느슨하게 검사)
    "strict": true,
    // 각 파일을 독립된 모듈로 인식하는 방식 설정
    // "force": 모든 파일에 export/import가 없어도 자동으로 개별 모듈로 취급해서 전역변수의 충돌 방지
    "moduleDetection": "force",


    /* 디버깅 및 라이브러리 배포용 설정 */
    // JS파일과 TS 소스코드를 연결시켜주는 맵을 생성 여부 설정
    "sourceMap": true,
    // 컴파일 시 .d.ts(타입 정의만 담긴 파일)를 함께 생성 여부 설정(라이브러리 제작 시 필수)
    // 외부 라이브러리 설정 시 true로 설정
    "declaration": false,
    // .d.ts 파일에 대한 소스맵을 생성, '정의로 이동' 시 실제 .ts파일로 이동
    "declarationMap": false,


    /* 더 엄격한 타입 검사(에러 방지) */
    // 객체나 배열의 인덱스로 접근할 때, 'undefined'가 섞여서 나올 가능성을 강제로 체크
    "noUncheckedIndexedAccess": true,
    // 선택적 속성(?)에 명시적으로 'undefined'를 할당 불가 여부 설정(true: 불가, false: 가능)
    "exactOptionalPropertyTypes": true,
    // 암시적인 any 타입을 막는 설정
    "noImplicitAny": true,


    /* 최신 및 권장 설정 */
    // 설치된 라이브러리(.d.ts)들의 내부 타입에러는 무시하고 내 코드의 타입에러만 체크 설정
    "skipLibCheck": true,
    // import문을 최적화 할 때 타입전용 import를 함부로 제거하지 않고 문법 그대로 유지
    "verbatimModuleSyntax": true,
    // 사이드 이펙트를 위한 import가 실제로 존재하는지 여부를 체크 설정
    "noUncheckedSideEffectImports": true,
    // 각 파일을 독립된 단위로 컴파일 할 수 있는지 검사(Vite or Babel) 같은 도구와의 호환성을 위해서 사용
    "isolatedModules": true,
    // JSX 파일이 JS파일로 변환되는 방식을 지정
    "jsx": "react-jsx",
  }
}
